
page{
	background: #FAFAFA;
}
.sale-view{
	    height: 260rpx;
	    background: #FFFFFF;
	    margin-top: 22rpx;
	    display: flex;
	    flex-direction: column;
	    align-items: center;
	    padding: 0rpx 24rpx 0rpx 26rpx;
}
.sale-content{
	height: 130rpx;
	width: 100%;
}
.sale-content-left{
	display: flex;
	align-items: center;
	margin-left: 20rpx;
}
.sale-content-title{
	font-size: 28rpx;
	font-weight: bold;
	color: #333333;
	line-height: 40rpx;
	margin-left: 14rpx;
}
.sale-content-right{
	display: flex;
	align-items: center;
	margin-right: 6rpx;
}
.sale-content-text{
	font-size: 24rpx;
	color: #AAAAAA;
	line-height: 33rpx;
}
.sale-content-img{
	width: 44rpx;
	height: 44rpx;
}
.sale-content-ar{
	width: 24rpx;
	height: 24rpx;
	margin-left: 6rpx;
}
.sale-line{
	width: 700rpx;
	height: 1px;
	background: #E6E6E6;
}

